<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Hero Image -->

    <!-- Title -->
    <ImageView
        android:id="@+id/heroImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_2" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to HarvestLand"
        android:textSize="28sp"
        android:textColor="#2E7D32"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect with agricultural land owners and find your perfect farming space"
        android:textSize="16sp"
        android:textColor="#666"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:paddingHorizontal="24dp"/>

    <!-- User Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue as User"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/userButtonSubtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find and rent agricultural land"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Owner Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue as Owner"
            android:backgroundTint="#2E7D32"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/ownerButtonSubtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List your agricultural land"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</LinearLayout>
