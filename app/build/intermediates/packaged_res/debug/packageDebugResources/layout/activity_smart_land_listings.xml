<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".UserSmartLandsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart Land Listings"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:id="@+id/landDetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="12dp"
                    android:elevation="5dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/landPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_8" />

                    <TextView
                        android:id="@+id/landTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fertile Agricultural Land"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/landLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karnataka, India"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/landSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 acres"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/landPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹50,000/acre/year"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="4dp"/>

                    <!-- New Land Details -->
                    <TextView
                        android:id="@+id/landOneB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="One-B: Available"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/landPassbook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passbook: Available"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/landAdangal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adangal: Available"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/landHealthCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health Card: Available"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>