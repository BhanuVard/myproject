<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <TextView
        android:id="@+id/notificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/notificationTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Land Confirmation Notification -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@android:color/white"
                android:layout_marginBottom="8dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Land Confirmation"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your land in Karnataka has been confirmed."
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <!-- Weather Report Notification -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@android:color/white"
                android:layout_marginBottom="8dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weather Report"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's weather: Sunny, 25Â°C"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <!-- Suggestion Notification -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@android:color/white"
                android:layout_marginBottom="8dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suggestion"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consider planting wheat this season for better yield."
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>