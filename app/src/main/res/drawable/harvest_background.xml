<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#f5f5f5" />
        </shape>
    </item>
    
    <!-- Pattern overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#4088c167"
                android:centerColor="#40a5d6a7"
                android:endColor="#40c8e6c9"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Subtle pattern -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#10ffffff"
                android:centerColor="#05ffffff"
                android:endColor="#10ffffff"
                android:type="linear" />
        </shape>
    </item>
</layer-list>